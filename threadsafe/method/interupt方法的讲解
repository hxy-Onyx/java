public class InterruptExample {
    public static void main(String[] args) throws InterruptedException {
        // 创建并启动一个线程 t
        Thread t = new Thread(() -> {
            try {
                // 线程开始执行
                System.out.println("线程开始工作...");
                // 模拟线程执行任务，并使其休眠 5 秒
                Thread.sleep(5000);
                System.out.println("线程休眠结束，继续工作...");
            } catch (InterruptedException e) {
                // 当线程被中断时，抛出 InterruptedException 并执行 catch 块
                System.out.println("线程被中断，停止工作！");
            }
        });

        // 启动线程 t
        t.start();

        // 主线程休眠 2 秒，模拟一些其他工作
        Thread.sleep(2000);
        System.out.println("主线程中断子线程");

        // 中断线程 t（如果它在休眠状态，会被中断）
        t.interrupt();
    }
}
